<Page x:Class="FlexiPos.Views.CRUDUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlexiPos.Views"
      mc:Ignorable="d" 
      d:DesignHeight="565" d:DesignWidth="925"
      Title="CRUDUsers">
    <Page.Resources>

        <!--#region FOCUSVISUAL -->
       
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" StrokeDashArray="1 2" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" SnapsToDevicePixels="true" StrokeThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <!--#endregion-->
        <!--#region BTNBACKSTYLE -->
        </Style>
        <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
        <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070"/>
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
        <Style x:Key="BtnBackStyle" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
            <Setter Property="BorderBrush" Value="#9D89AF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="8" x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#968E99"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#968E99"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#9D89AF"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#9D89AF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--#endregion-->
    </Page.Resources>

    <Border Background="#8392A4"
            CornerRadius="10">

        <Grid>
            <!--#region COLS & ROWS -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="20"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="20"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0"></RowDefinition>
                <RowDefinition Height="50 "></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition ></RowDefinition>
            </Grid.RowDefinitions>
            <!--#endregion-->
            <!--#region TITLE -->
            <TextBlock x:Name="Title"
                       Text="User Creation"
                       Grid.Column="1"
                       Grid.Row="1"
                       Grid.ColumnSpan="6"
                       FontSize="30"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"></TextBlock>
            <!--#endregion-->
            <!--#region BACK -->
            <Button Style="{DynamicResource BtnBackStyle}" x:Name="BtnBack"
                    Content="Back"
                    Grid.Column="1"
                    Grid.Row="2"
                    Width="100"
                    Cursor="Hand"
                    Background="#9D89AF"
                    Foreground="White"
                    FontSize="15" Click="BackButton"
                    ></Button>
            <!--#endregion-->
            <!--#region CONTENT -->
            <TextBlock Grid.Row="4"
                       Grid.Column="1"
                       Text="Names"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"></TextBlock>

            <TextBox Grid.Row="4"
                     Grid.Column="2"
                     x:Name="tbNames"></TextBox>

            <TextBlock Grid.Row="6"
                       Grid.Column="1"
                       Text="Last Names"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"></TextBlock>
            <TextBox Grid.Row="6"
                     Grid.Column="2"
                     x:Name="tbLastNames"></TextBox>
            <TextBlock Grid.Row="8"
                       Grid.Column="1"
                       Text="CC"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"></TextBlock>
            <TextBox Grid.Row="8"
                     Grid.Column="2"
                     x:Name="tbcc"></TextBox>
            <TextBlock Grid.Row="10"
                       Grid.Column="1"
                       Text="NIT"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"></TextBlock>
            <TextBox Grid.Row="10"
                     Grid.Column="2"
                     x:Name="tbNit"></TextBox>
            <TextBlock Grid.Row="12"
                       Grid.Column="1"
                       Text="Email"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"></TextBlock>
            <TextBox Grid.Row="12"
                     Grid.Column="2"
                     x:Name="tbEmail"></TextBox>
            <TextBlock Grid.Row="14"
                       Grid.Column="1"
                       Text="Phone"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"></TextBlock>
            <TextBox Grid.Row="14"
                     Grid.Column="2"
                     x:Name="tbPhone"></TextBox>
            <TextBlock Grid.Row="16"
                       Grid.Column="1"
                       Text="Birthdate"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"></TextBlock>
            <TextBox Grid.Row="16"
                     Grid.Column="2"
                     x:Name="tbBirthdate"></TextBox>
            <TextBlock Grid.Row="18"
                       Grid.Column="1"
                       Text="Privilege"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"></TextBlock>
            <ComboBox Grid.Row="18"
                      Grid.Column="2"
                      x:Name="cbPrivilege"></ComboBox>
            <Image Grid.Row="4"
                   Grid.Column="4"
                   Grid.RowSpan="11"
                   Grid.ColumnSpan="2"
                   x:Name="image"
                   Source="/Resources/IMG/Profile.png"></Image>
            <Button Grid.Column="4"
                    Grid.Row="16"
                    Grid.ColumnSpan="2"
                    Width="100"
                    Content="Change Photo"
                    Background="#9D89AF"
                    Cursor="Hand"
                    Style="{DynamicResource BtnBackStyle}"></Button>
            
                <!--#endregion-->

        </Grid>
    </Border>
   
</Page>
